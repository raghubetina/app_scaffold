<%- model_class = @favorite.class -%>



<div class="page-header">



  <h1><%=t '.title', :default => model_class.model_name.human %></h1>



</div>







<dl class="dl-horizontal">



  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>



  <dd><%= link_to(@favorite.user.name, @favorite.user) if @favorite.user %></dd>



  <dt><strong><%= model_class.human_attribute_name(:movie_id) %>:</strong></dt>



  <dd><%= link_to(@favorite.movie.title, @favorite.movie) if @favorite.movie %></dd>



</dl>







<div class="form-actions">



  <%= link_to t('.back', :default => t("helpers.links.back")),



              favorites_path, :class => 'btn'  %>



  <%= link_to t('.edit', :default => t("helpers.links.edit")),



              edit_favorite_path(@favorite), :class => 'btn' %>



  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),



              favorite_path(@favorite),



              :method => 'delete',



              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),



              :class => 'btn btn-danger' %>



</div>
