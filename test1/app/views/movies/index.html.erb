<%- model_class = Movie.new.class -%>

<div class="page-header">

  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>

</div>

<table class="table table-striped">

  <thead>

    <tr>

      <th><%= model_class.human_attribute_name(:id) %></th>

      <th><%= model_class.human_attribute_name(:title) %></th>

      <th><%= model_class.human_attribute_name(:year) %></th>

      <th><%= model_class.human_attribute_name(:director_id) %></th>

      <th><%= model_class.human_attribute_name(:created_at) %></th>

      <th><%=t '.actions', :default => t("helpers.actions") %></th>

    </tr>

  </thead>

  <tbody>

    <% @movies.each do |movie| %>

      <tr>

        <td><%= link_to movie.id, movie_path(movie) %></td>

        <td><%= movie.title %></td>

        <td><%= movie.year %></td>

        <td><%= link_to(movie.director.name, movie.director) if movie.director %></td>

        <td><%=l movie.created_at %></td>

        <td>

          <%= link_to t('.edit', :default => t("helpers.links.edit")),

                      edit_movie_path(movie), :class => 'btn btn-mini' %>

          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),

                      movie_path(movie),

                      :method => :delete,

                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),

                      :class => 'btn btn-mini btn-danger' %>

        </td>

      </tr>

    <% end %>

  </tbody>

</table>



<%= link_to t('.new', :default => t("helpers.links.new")),

            new_movie_path,

            :class => 'btn btn-primary' %>
