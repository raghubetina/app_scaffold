<%- model_class = @movie.class -%>



<div class="page-header">



  <h1><%=t '.title', :default => model_class.model_name.human %></h1>



</div>







<dl class="dl-horizontal">



  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>



  <dd><%= @movie.title %></dd>



  <dt><strong><%= model_class.human_attribute_name(:year) %>:</strong></dt>



  <dd><%= @movie.year %></dd>



  <dt><strong><%= model_class.human_attribute_name(:director_id) %>:</strong></dt>



  <dd><%= link_to(@movie.director.name, @movie.director) if @movie.director %></dd>



</dl>







<div class="form-actions">



  <%= link_to t('.back', :default => t("helpers.links.back")),



              movies_path, :class => 'btn'  %>



  <%= link_to t('.edit', :default => t("helpers.links.edit")),



              edit_movie_path(@movie), :class => 'btn' %>



  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),



              movie_path(@movie),



              :method => 'delete',



              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),



              :class => 'btn btn-danger' %>



</div>
